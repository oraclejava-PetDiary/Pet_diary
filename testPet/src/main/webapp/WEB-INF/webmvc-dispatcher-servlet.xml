<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:mvc="http://www.springframework.org/schema/mvc"
xsi:schemaLocation="http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- 1. @Controller, @Autowired등 어노테이션 기반의 코딩이 가능하게 함. 필수 설정 -->
	<mvc:annotation-driven/>
	
	<!-- 2. 뷰리졸버 설정. 뷰이름을 근거로 jsp를 결정한다. -->
	<!-- 전치사(prefix) + 뷰이름 + 후치사(suffix) -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
	<!-- 3. 빈 자동스캔 설정 -->
	<!-- 베이스 패키지에 자동스캔할 패키지를 등록하면 서브패키지포함해서 스캔 -->
	<!-- @Controller, @Repository, @Service, @Component 가 붙은 클래스가 대상 -->
	<context:component-scan base-package="com.oraclejava.spring"/>

	<!-- 4. 정적 리소스 설정 -->
	<!-- CSS, image, js파일 등은 컨트롤러를 통해 접속하지 않도록 설정 -->
	<mvc:resources location="/resources/" mapping="/resources/**"/>
	<mvc:resources location="/webjars/" mapping="/webjars/**"/>
</beans>



